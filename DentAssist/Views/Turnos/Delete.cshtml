@model DentAssist.Models.Data.Entities.Turno

@{
    ViewData["Title"] = "Eliminar Turno";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var estados = new[] { "Pendiente", "Confirmado", "Realizado", "Cancelado" };
}

<section class="content-header">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
    </div>
</section>

<section class="content">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">¿Estás seguro que deseas eliminar este turno?</h3>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Fecha y Hora</dt>
                            <dd class="col-sm-8">@Model.FechaHora?.ToString("g")</dd>

                            <dt class="col-sm-4">Duración</dt>
                            <dd class="col-sm-8">@Model.Duracion minutos</dd>

                            <dt class="col-sm-4">Estado</dt>
                            <dd class="col-sm-8">@estados[Model.Estado ?? 0]</dd>

                            <dt class="col-sm-4">Paciente</dt>
                            <dd class="col-sm-8">@Model.Paciente?.Nombre</dd>

                            <dt class="col-sm-4">Odontólogo</dt>
                            <dd class="col-sm-8">@Model.Odontologo?.Nombre</dd>
                        </dl>
                    </div>
                    <div class="card-footer text-right">
                        <form asp-action="Delete" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Eliminar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
