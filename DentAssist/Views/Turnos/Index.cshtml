@model IEnumerable<DentAssist.Models.Data.Entities.Turno>

@{
    ViewData["Title"] = "Turnos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Listado de Turnos</h1>
            </div>
            <div class="col-sm-6 text-right">
                <a asp-action="Create" class="btn btn-primary">Nuevo Turno</a>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>Fecha y Hora</th>
                            <th>Duración</th>
                            <th>Estado</th>
                            <th>Paciente</th>
                            <th>Odontólogo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(item.FechaHora.HasValue? item.FechaHora.Value.ToString("dd/MM/yyyy HH:mm") : "")</td>
                                <td>@item.Duracion</td>
                                <td>
                                    @if (item.Estado == 0)
                                    {
                                        <span class="badge badge-info">Pendiente</span>
                                    }
                                    else if (item.Estado == 1)
                                    {
                                        <span class="badge badge-success">Confirmado</span>
                                    }
                                    else if (item.Estado == 2)
                                    {
                                        <span class="badge badge-secondary">Cancelado</span>
                                    }
                                </td>
                                <td>@item.Paciente?.Nombre</td>
                                <td>@item.Odontologo?.Nombre</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
