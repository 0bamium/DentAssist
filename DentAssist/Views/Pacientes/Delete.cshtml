@model DentAssist.Models.Data.Entities.Paciente

@{
    ViewData["Title"] = "Eliminar Paciente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <h1 class="m-0 text-danger">Eliminar Paciente</h1>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="card card-danger">
            <div class="card-body">
                <h5>¿Estás seguro que deseas eliminar el siguiente paciente?</h5>

                <dl class="row">
                    <dt class="col-sm-3">Nombre</dt>
                    <dd class="col-sm-9">@Model.Nombre</dd>

                    <dt class="col-sm-3">Rut</dt>
                    <dd class="col-sm-9">@Model.Rut</dd>

                    <dt class="col-sm-3">Teléfono</dt>
                    <dd class="col-sm-9">@Model.Telefono</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Dirección</dt>
                    <dd class="col-sm-9">@Model.Direccion</dd>
                </dl>

                <form asp-action="DeleteConfirmed">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>
