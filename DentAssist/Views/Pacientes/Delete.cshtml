@model DentAssist.Models.Data.Entities.Paciente

@{
    ViewData["Title"] = "Eliminar Paciente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
    </div>
</section>

<section class="content">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">¿Estás seguro que deseas eliminar este paciente?</h3>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Nombre</dt>
                            <dd class="col-sm-8">@Model.Nombre</dd>

                            <dt class="col-sm-4">RUT</dt>
                            <dd class="col-sm-8">@Model.Rut</dd>

                            <dt class="col-sm-4">Teléfono</dt>
                            <dd class="col-sm-8">@Model.Telefono</dd>

                            <dt class="col-sm-4">Email</dt>
                            <dd class="col-sm-8">@Model.Email</dd>

                            <dt class="col-sm-4">Dirección</dt>
                            <dd class="col-sm-8">@Model.Direccion</dd>
                        </dl>
                    </div>
                    <div class="card-footer text-right">
                        <form asp-action="Delete" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Eliminar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
