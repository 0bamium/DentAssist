@model IEnumerable<DentAssist.Models.Data.Entities.PlanTratamiento>

@{
    ViewData["Title"] = "Planes de Tratamiento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
  <div class="container-fluid px-0">
    <div class="row mb-2 px-3">
      <div class="col-sm-6">
        <h1>@ViewData["Title"]</h1>
      </div>
      <div class="col-sm-6 text-right">
        <a asp-action="Create" class="btn btn-primary rounded-pill">
          <i class="fas fa-plus"></i> Nuevo Plan
        </a>
      </div>
    </div>
  </div>
</section>

<section class="content">
  <div class="container-fluid px-0">
    <div class="row no-gutters">
      <div class="col-12">
        <div class="card shadow rounded-3 border-0">
          <div class="card-body px-3">
            <div class="table-responsive">
              <table class="table table-bordered table-hover rounded-3 overflow-hidden">
                <thead class="thead-light">
                  <tr>
                    <!-- En lugar de m => m.First().FechaCreacion, usamos el tipo directamente -->
                    <th>@Html.DisplayNameFor((DentAssist.Models.Data.Entities.PlanTratamiento p) => p.FechaCreacion)</th>
                    <th>@Html.DisplayNameFor((DentAssist.Models.Data.Entities.PlanTratamiento p) => p.Observaciones)</th>
                    <th>Paciente</th>
                    <th>Odontólogo</th>
                    <th>Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  @foreach (var plan in Model)
                  {
                    <tr>
                      <td>@(plan.FechaCreacion.ToShortDateString() ?? "Sin fecha")</td>
                      <td>@plan.Observaciones</td>
                      <td>@(plan.Paciente?.Nombre ?? "N/A")</td>
                      <td>@(plan.Odontologo?.Nombre ?? "N/A")</td>
                      <td>
                        <a asp-action="Edit"   asp-route-id="@plan.Id" class="btn btn-sm btn-warning rounded-circle" title="Editar"><i class="fas fa-edit"></i></a>
                        <a asp-action="Details"asp-route-id="@plan.Id" class="btn btn-sm btn-info   rounded-circle" title="Detalle"><i class="fas fa-eye"></i></a>
                        <a asp-action="Delete" asp-route-id="@plan.Id" class="btn btn-sm btn-danger rounded-circle" title="Eliminar"><i class="fas fa-trash"></i></a>
                      </td>
                    </tr>
                  }
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
