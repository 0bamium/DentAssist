@model DentAssist.Models.Data.Entities.PlanTratamiento

@{
    ViewData["Title"] = "Editar Plan de Tratamiento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
    </div>
</section>

<section class="content">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-warning">
                    <div class="card-header bg-warning text-white">
                        <h3 class="card-title">@ViewData["Title"]</h3>
                    </div>

                    <form asp-action="Edit">
                        <div class="card-body">
                            <div asp-validation-summary="All" class="text-danger mb-2"></div>

                            <input type="hidden" asp-for="Id" />

                            <div class="form-group">
                                <label asp-for="FechaCreacion"></label>
                                <input asp-for="FechaCreacion" class="form-control" type="date" />
                                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Observaciones"></label>
                                <input asp-for="Observaciones" class="form-control" />
                                <span asp-validation-for="Observaciones" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PacienteId"></label>
                                <select asp-for="PacienteId" class="form-control" asp-items="ViewBag.PacienteId"></select>
                                <span asp-validation-for="PacienteId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="OdontologoId"></label>
                                <select asp-for="OdontologoId" class="form-control" asp-items="ViewBag.OdontologoId"></select>
                                <span asp-validation-for="OdontologoId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card-footer text-right">
                            <button type="submit" class="btn btn-warning text-white">
                                <i class="fas fa-edit"></i> Guardar cambios
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
