@model DentAssist.Models.Data.Entities.PlanTratamiento

@{
    ViewData["Title"] = "Eliminar Plan de Tratamiento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
    </div>
</section>

<section class="content">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h3 class="card-title">¿Estás seguro de eliminar este plan?</h3>
                    </div>

                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Fecha de Creación</dt>
                            <dd class="col-sm-8">@Model.FechaCreacion.ToShortDateString()"</dd>

                            <dt class="col-sm-4">Observaciones</dt>
                            <dd class="col-sm-8">@Model.Observaciones</dd>

                            <dt class="col-sm-4">Paciente</dt>
                            <dd class="col-sm-8">@Model.Paciente.Nombre</dd>

                            <dt class="col-sm-4">Odontólogo</dt>
                            <dd class="col-sm-8">@Model.Odontologo.Nombre</dd>
                        </dl>
                    </div>

                    <div class="card-footer text-right">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
