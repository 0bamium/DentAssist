<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>DentAssist | @ViewData["Title"]</title>

    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="~/adminlte/plugins/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="~/adminlte/dist/css/adminlte.min.css" />

    <!-- Tu CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="~/" class="brand-link">
                <i class="fas fa-tooth ml-3"></i>
                <span class="brand-text font-weight-light">DentAssist</span>
            </a>

            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview">
                        <li class="nav-item">
                            <a asp-controller="Pacientes" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-user-injured"></i><p>Pacientes</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Odontologos" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-user-md"></i><p>Odontólogos</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Tratamientos" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-notes-medical"></i><p>Tratamientos</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Turnos" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-calendar-check"></i><p>Turnos</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="PlanTratamientos" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-file-medical"></i><p>Plan Tratamientos</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <section class="content pt-3">
                <div class="container-fluid">
                    <!-- Tarjeta de bienvenida (puedes eliminar esto si no quieres una tarjeta por defecto) -->
                    @if (ViewData["Title"]?.ToString() == "Home" || ViewData["Title"]?.ToString() == "")
                    {
                        <div class="card shadow border-0">
                            <div class="card-header bg-info text-white">
                                <h3 class="card-title mb-0">Bienvenido a DentAssist</h3>
                            </div>
                            <div class="card-body">
                                <p>Utiliza el menú de la izquierda para gestionar pacientes, odontólogos, tratamientos y turnos.</p>
                            </div>
                        </div>
                    }

                    <!-- Cuerpo dinámico -->
                    @RenderBody()
                </div>
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <strong>&copy; 2025 DentAssist</strong>
            <div class="float-right d-none d-sm-inline-block">
                <a asp-controller="Home" asp-action="Privacy" class="text-light">Privacidad</a>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="~/adminlte/plugins/jquery/jquery.min.js"></script>
    <script src="~/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/adminlte/dist/js/adminlte.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
